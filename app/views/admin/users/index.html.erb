      <body>
        <table>
          <tr>
            <td>
            <%= link_to 'ユーザー登録' ,:controller => 'admin/users', :action => 'new' %>
            </td>
          </tr>
          <% if @users.size == 0 %>
          <tr><td>現在、ユーザーは一名もいません</td></tr>
          <% else %>
          <tr><td>ユーザー名</td><td>メールアドレス</td><td>削除</td></tr>
              <% @users.each do |user| %>
          <tr>
             <td><%=h user.name %></td><td><%=h user.mail %></td>
             <td><%= link_to('削除', {:action =>'delete', :id => user.id},{:method => :delete, :confirm => "yra"}) %>
          </tr>
             <% end %>
          <% end %>
      </table>
        
        
      </body>
